{
  "name": "mcp-client-chatbot",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "pnpm initial:check && next dev --turbopack",
    "build": "next build && NODE_ENV=production pnpm db:migrate",
    "start": "next start",
    "test": "vitest",
    "lint:next": "next lint",
    "lint": "biome lint --write --unsafe ./src",
    "format": "biome format --write",
    "initial:check": "tsx scripts/flag.ts check",
    "initial:env": "tsx scripts/copy-env.ts",
    "initial:mcp-config": "tsx scripts/generate-mcp-config.ts",
    "initial:flag-generate": "tsx scripts/flag.ts generate",
    "initial": "pnpm install && pnpm initial:env && pnpm initial:mcp-config && pnpm db:migrate && pnpm initial:flag-generate",
    "postinstall": "node -e \"process.env.VERCEL !== '1' && require('child_process').execSync('tsx scripts/generate-mcp-config.ts', {stdio: 'inherit'})\"",
    "clean": "tsx scripts/clean.ts",
    "db:generate": "drizzle-kit generate",
    "db:reset": "drizzle-kit drop && drizzle-kit push",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "tsx src/lib/db/migrate.sqlite.ts",
    "db:pull": "drizzle-kit pull",
    "db:check": "drizzle-kit check",
    "db:turso:push": "drizzle-kit push:sqlite --config=drizzle.config.ts",
    "db:turso:studio": "drizzle-kit studio --config=drizzle.config.ts"
  },
  "dependencies": {
    "@ai-sdk-tool/parser": "^1.0.2",
    "@ai-sdk/anthropic": "^1.2.10",
    "@ai-sdk/google": "^1.2.13",
    "@ai-sdk/openai": "^1.3.20",
    "@ai-sdk/react": "^1.2.9",
    "@ai-sdk/xai": "^1.2.15",
    "@libsql/client": "^0.15.4",
    "@modelcontextprotocol/sdk": "^1.10.2",
    "@radix-ui/react-accordion": "^1.2.8",
    "@radix-ui/react-avatar": "^1.1.7",
    "@radix-ui/react-dialog": "^1.1.11",
    "@radix-ui/react-dropdown-menu": "^2.1.12",
    "@radix-ui/react-hover-card": "^1.1.11",
    "@radix-ui/react-label": "^2.1.4",
    "@radix-ui/react-popover": "^1.1.11",
    "@radix-ui/react-radio-group": "^1.3.4",
    "@radix-ui/react-scroll-area": "^1.2.6",
    "@radix-ui/react-select": "^2.2.2",
    "@radix-ui/react-separator": "^1.1.4",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-switch": "^1.2.2",
    "@radix-ui/react-toggle": "^1.1.6",
    "@radix-ui/react-tooltip": "^1.2.4",
    "@tiptap/extension-mention": "^2.11.7",
    "@tiptap/react": "^2.11.7",
    "@tiptap/starter-kit": "^2.11.7",
    "@tiptap/suggestion": "^2.11.7",
    "ai": "^4.3.10",
    "chokidar": "^4.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "consola": "^3.4.2",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.41.0",
    "fast-deep-equal": "^3.1.3",
    "framer-motion": "^12.9.2",
    "hast-util-to-jsx-runtime": "^2.3.6",
    "lucide-react": "^0.486.0",
    "nanoid": "^5.1.5",
    "next": "15.2.4",
    "next-themes": "^0.4.6",
    "ollama-ai-provider": "^1.2.0",
    "pg": "^8.15.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "react-resizable-panels": "^2.1.8",
    "shiki": "^3.3.0",
    "sonner": "^2.0.3",
    "swr": "^2.3.3",
    "tailwind-merge": "^3.2.0",
    "ts-safe": "^0.0.5",
    "tw-animate-css": "^1.2.8",
    "zod": "^3.24.3",
    "zod-to-json-schema": "^3.24.5",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@tailwindcss/postcss": "^4.1.4",
    "@types/node": "^20.17.31",
    "@types/pg": "^8.11.14",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "drizzle-kit": "^0.30.6",
    "eslint": "^9.25.1",
    "eslint-config-next": "15.3.0",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.4",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.2"
  },
  "packageManager": "pnpm@10.2.1"
}
